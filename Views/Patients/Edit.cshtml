@model HospitalSanVicente.Models.Patient

@{
    ViewData["Title"] = "Editar Paciente";
}

<h2>Editar Paciente</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            @* Para evitar problemas con Document como clave primaria *@
            <input type="hidden" asp-for="Document" />

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control" type="number" min="0" max="120" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BloodType" class="form-label"></label>
                <select asp-for="BloodType" class="form-select">
                    <option value="">-- Seleccione Tipo de Sangre --</option>
                    @foreach (var type in Enum.GetValues(typeof(BloodType)))
            {
               <option value="@type.ToString().Replace("_Positive", "+").Replace("_Negative", "-")">
                    @type.ToString().Replace("_Positive", "+").Replace("_Negative", "-")
                </option>
            }
                </select>
                <span asp-validation-for="BloodType" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Guardar Cambios
            </button>
            <a asp-action="List" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Volver
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
