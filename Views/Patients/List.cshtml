@model List<HospitalSanVicente.Models.Patient>

@{
    ViewData["Title"] = "Listado de Pacientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Listado de Pacientes</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Nuevo Paciente
    </a>
</div>

<div class="card">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Documento</th>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Tel√©fono</th>
                            <th>Edad</th>
                            <th>Tipo de Sangre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr>
                                <td>@patient.Document</td>
                                <td>@patient.FirstName @patient.LastName</td>
                                <td>@patient.Email</td>
                                <td>@patient.Phone</td>
                                <td>@patient.Age</td>
                                <td>
                                    @if (patient.BloodType != null)
                                    {
                                        @((patient.BloodType).ToString().Replace("_Positive", "+").Replace("_Negative", "-"))
                                       
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@patient.Document" 
                                           class="btn btn-sm btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@patient.Document" 
                                           class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="bi bi-people display-1 text-muted"></i>
                <h4 class="text-muted mt-3">No hay pacientes registrados</h4>
                <p class="text-muted">Comienza registrando el primer paciente en el sistema.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i> Registrar Primer Paciente
                </a>
            </div>
        }
    </div>
</div>

