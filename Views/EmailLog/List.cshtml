@model List<HospitalSanVicente.Models.EmailLog>

@{
    ViewData["Title"] = "Historial de Correos Enviados";
}

<h2>Historial de Correos Enviados</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive mt-3">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Paciente</th>
                    <th>Doctor</th>
                    <th>Para</th>
                    <th>Asunto</th>
                    <th>Fecha de Env√≠o</th>
                    <th>Estado</th>
                    <th>Error</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var email in Model)
                {
                    <tr>
                        <td>@email.Id</td>
                        <td>@email.Appointment?.Patient?.FirstName @email.Appointment?.Patient?.LastName</td>
                        <td>@email.Appointment?.Doctor?.FirstName @email.Appointment?.Doctor?.LastName</td>
                        <td>@email.RecipientEmail</td>
                        <td>@email.Subject</td>
                        <td>@email.SentAt.ToString("g")</td>
                        <td>@email.Status</td>
                        <td>@email.ErrorMessage</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-4">
        <i class="bi bi-envelope-x display-1 text-muted"></i>
        <h4 class="text-muted mt-3">No hay correos registrados</h4>
    </div>
}
